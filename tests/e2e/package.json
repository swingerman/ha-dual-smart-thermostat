{
  "name": "e2e",
  "version": "1.0.0",
  "description": "This directory contains End-to-End (E2E) tests using Playwright to test the Home Assistant integration config flows and options flows for the Dual Smart Thermostat custom component.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:all": "./scripts/test-runner.sh --all",
    "test:local": "./scripts/test-runner.sh --e2e",
    "test:setup": "node scripts/test-setup.js",
    "test:setup-docker": "docker compose -f docker-compose.local.yml up -d",
    "test:cleanup": "docker compose -f docker-compose.local.yml down -v",
    "install:browsers": "playwright install",
    "show-report": "playwright show-report",
    "lint": "eslint tests/ playwright/ --ext .ts",
    "lint:fix": "eslint tests/ playwright/ --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "e2e",
    "home-assistant",
    "thermostat"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.5.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
